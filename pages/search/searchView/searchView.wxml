<!--pages/search/searchView/searchView.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__hd">
      <view class="page__title">高级搜索</view>
      <view class="page__desc">输入想要查询的信息</view>
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
              <view class="weui-label">昵称</view>
          </view>
          <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请输入昵称"/>
          </view>
      </view>

      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">婚姻状况</view>
        </view>
        <view class="weui-cell__bd">
            <picker bindchange="bindStatusChange" value="{{statusIndex}}" range="{{status}}">
                <view class="weui-select weui-select_in-select-after">{{status[statusIndex]}}</view>
            </picker>
        </view>
      </view>

