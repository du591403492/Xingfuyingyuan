.container{
  height: 1500rpx;
}

.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #479de6;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}
.container.withtab{
  margin: 105rpx 0 0 0;
  /*top: 105rpx;*/
}
.cells {
  background-color: #fff;
}

.cells .item {
  display: flex;
  align-items: flex-start;
  border-bottom: 1rpx solid #eee;
}

.cells .item image {
  width: 90rpx;
  height: 100rpx;
  margin: 20rpx;
}

.cells .item .meta {
  display: flex;
  padding: 20rpx 10rpx;
  flex-direction: column;
}
.cells .item .meta .name {
  color: #234;
  font-size: 28rpx;
}
.cells .item .meta .txt{
  color:grey;
  font-size: 20rpx;
}
