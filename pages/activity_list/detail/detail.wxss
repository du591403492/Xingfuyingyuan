.card {
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 4px 1px 1px #cccccc;
    margin: 8px;
    position: relative;
}
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
  border-top:1px solid darkgray;
  padding:1px;
}
.tr-1 {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 1rem;
  align-items: center;
}
.td {
    width:10%;
    justify-content: center;
    font-size:15px;
    padding:5px;
}
.td-1 {
    width:20%;
    justify-content: center;
    font-size:15px;
}
.td-2 {
    width:70%;
    justify-content: center;
    font-size:15px;
    padding:5px;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

.title{
  font-size: 20px;
}
.data{
  font-size:15px;
}
.time{
  font-size: 10px;
  color:gray;
}
.image {
    width: 100%;
    height: 200px;
    background-color: #eeeeee;
}

